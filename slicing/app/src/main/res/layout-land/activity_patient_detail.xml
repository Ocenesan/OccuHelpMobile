<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".patientdetail.PatientDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button"
            android:backgroundTint="@null"
            android:padding="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline3"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            />

        <TextView
            android:id="@+id/aboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:text="@string/patientDetail"
            android:fontFamily="@font/nunitobold"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/backButton"
            app:layout_constraintTop_toTopOf="@id/backButton"
            app:layout_constraintBottom_toBottomOf="@id/backButton"
            />

        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/detail_image"
            app:layout_constraintTop_toTopOf="@id/guideline4"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline2"/>

        <TextView
            android:id="@+id/patientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patientName"
            android:textSize="16sp"
            android:fontFamily="@font/nunitobold"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/detailImage"
            app:layout_constraintStart_toStartOf="@id/guideline"/>

        <TextView
            android:id="@+id/patientBiodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_radius"
            android:backgroundTint="@color/biodataColor"
            android:padding="3dp"
            android:text="@string/biodata"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/patientName"
            app:layout_constraintBottom_toBottomOf="@id/patientName"
            app:layout_constraintEnd_toEndOf="@id/guideline2"/>

        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/patientBiodata"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline2"/>

        <TextView
            android:id="@+id/dateOfInspectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dateOfInspectionTitle"
            android:textSize="13sp"
            android:fontFamily="@font/nunitosemibold"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/line"/>

        <TextView
            android:id="@+id/dateOfInspectionDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dateOfInspectionDescription"
            android:textSize="13sp"
            android:fontFamily="@font/nunitoregular"
            app:layout_constraintStart_toStartOf="@id/guideline6"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="@id/dateOfInspectionTitle"/>

        <TextView
            android:id="@+id/medicalRecordNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medicalRecordNumber"
            android:textSize="13sp"
            android:fontFamily="@font/nunitosemibold"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/dateOfInspectionDescription"/>

        <TextView
            android:id="@+id/medicalRecordNumberDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/medicalRecordNumberDescription"
            android:textSize="13sp"
            android:fontFamily="@font/nunitoregular"
            app:layout_constraintStart_toStartOf="@id/guideline6"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="@id/medicalRecordNumber"/>

        <TextView
            android:id="@+id/patientNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patientNumber"
            android:textSize="13sp"
            android:fontFamily="@font/nunitosemibold"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/medicalRecordNumberDescription"/>

        <TextView
            android:id="@+id/patientNumberDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/patientNumberDescription"
            android:textSize="13sp"
            android:fontFamily="@font/nunitoregular"
            app:layout_constraintStart_toStartOf="@id/guideline6"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="@id/patientNumber"/>

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textSize="13sp"
            android:fontFamily="@font/nunitosemibold"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/patientNumberDescription"/>

        <TextView
            android:id="@+id/genderDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/genderDescription"
            android:textSize="13sp"
            android:fontFamily="@font/nunitoregular"
            app:layout_constraintStart_toStartOf="@id/guideline6"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="@id/gender"/>

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age"
            android:textSize="13sp"
            android:fontFamily="@font/nunitosemibold"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/genderDescription"/>

        <TextView
            android:id="@+id/ageDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ageDetail"
            android:textSize="13sp"
            android:fontFamily="@font/nunitoregular"
            app:layout_constraintStart_toStartOf="@id/guideline6"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="@id/age"/>

        <TextView
            android:id="@+id/birthDatePlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birthDatePlace"
            android:textSize="13sp"
            android:fontFamily="@font/nunitosemibold"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/ageDetail"/>

        <TextView
            android:id="@+id/birthDatePlaceDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/birthDatePlaceDescription"
            android:textSize="13sp"
            android:fontFamily="@font/nunitoregular"
            app:layout_constraintStart_toStartOf="@id/guideline6"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="@id/birthDatePlace"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textSize="13sp"
            android:fontFamily="@font/nunitosemibold"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/birthDatePlaceDescription"/>

        <TextView
            android:id="@+id/addressDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/addressDescription"
            android:textSize="13sp"
            android:fontFamily="@font/nunitoregular"
            android:justificationMode="inter_word"
            app:layout_constraintStart_toStartOf="@id/guideline6"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="@id/address"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonMCUResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mcuResult"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/report"
            style="@style/CustomOutlinedButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/addressDescription"
            app:layout_constraintEnd_toEndOf="@id/guideline2"/>

        <View
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/buttonMCUResult"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.11" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.48" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.52" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>